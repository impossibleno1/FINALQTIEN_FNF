@model IEnumerable<DIENMAYQUYETTIEN2.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Main/Views/Shared/_Admin_Layout.cshtml";
}

<!-- Main container -->
<div class="container-fluid">
    <div class="row" style="background-color: #f2f2f2 ">
        <div class="col-xs-12 col-md-1" style="background-color: #f2f2f2 ">

        </div>
        <div class="col-xs-12 col-md-10" style="padding:20px">
            <div class="container-fluid" style="width: 100%; height: 500px; display: flex; justify-content: center; background-color: white;">
                <div class="row">
                    <div class="col-xs-12 col-md-6" style="width: 50%; height: 100%; flex-wrap: wrap; display: flex;">


                        @for (int i = 0; i < 4; i++)
                        {
                            <div style="width: 48%; height: 48%; display: flex; justify-content: center; flex-direction: row; align-items: center; border: 1px solid gray; margin: 5px;">
                                <img src="@Url.Action("Details", new { id = Model.ElementAt(i).ID })" style="height: 90%; width: 50%;" />
                                <div style="display: flex; justify-content: flex-start; flex-direction: column; align-items: flex-start; padding-left: 10px;">
                                    <h2 style="color: red; margin-bottom: 3px;">@Model.ElementAt(i).ProductName</h2>
                                    <div style="margin-bottom: 10px;">

                                    </div>
                                    <button class="btn btn-primary">Add to cart</button>
                                </div>
                            </div>
                        }


                    </div>

                    <div class="col-xs-12 col-md-6" style="width: 50%; height: 100%; display:flex; justify-content: center; align-items: center;">
                        @*<img src="@Url.Action("Details", new { id = Model.ElementAt(0).ID })" style="height: 98%; margin-left: -20px;" />*@
                        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" style="margin-left:20px;margin-right:20px;">
                            <div class="carousel-inner">
                                <div class="carousel-item active">

                                    <img class="d-block " style="width: 1100px; height: 450px" src="~/Images/dienmay.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">

                                    <img class="d-block " style="width: 1100px; height: 450px" src="~/Images/dienmay_1171.png" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block " style="width:1100px;height:450px" src="~/Images/dienmay2.jpg" alt="Third slide" />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="main">
                <div class="content">
                    <div class="content_top">
                        <div class="heading">
                            <h3>Feature Products</h3>
                        </div>
                        <div class="page-no">
                            <p>
                                Result Pages:<ul>
                                    <li><a href="#">1</a></li>
                                    <li class="active"><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li>[<a href="#"> Next>>></a>]</li>
                                </ul>
                            </p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="section group" style="padding-left: 5px; padding-right: 5%; flex-wrap: wrap; justify-content: center; align-items: center;">
                        @foreach (var item in Model)
                        {
                            <div class="grid_1_of_4 images_1_of_4" style="margin: 10px;">
                                <a href="preview-3.html"><img src="@Url.Action("Details", new { id = item.ID })" alt="@item.ProductName" style="width: 100%; height: 300px; min-height: 300px; min-width: 100%;" /></a>
                                <h2>@item.ProductName</h2>
                                <p><span class="strike">@item.SalePrice đ</span><span class="price">@item.SalePrice đ</span></p>
                                <div class="button"><span><img src="images/cart.jpg" alt="" /><a href="preview-3.html" class="cart-button">Add to Cart</a></span> </div>
                                <div class="button"><span><a href="preview-3.html" class="details">Details</a></span></div>
                            </div>
                        }
                    </div>
                    <div class="content_bottom">
                        <div class="heading">
                            <h3>New Products</h3>
                        </div>
                        <div class="page-no">
                            <p>
                                Result Pages:<ul>
                                    <li><a href="#">1</a></li>
                                    <li class="active"><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li>[<a href="#"> Next>>></a>]</li>
                                </ul>
                            </p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="section group" style="padding-left: 5px; padding-right: 5%; flex-wrap: wrap; justify-content: center; align-items: center;">
                        @foreach (var item in Model)
                        {
                            <div class="grid_1_of_4 images_1_of_4" style="margin: 10px;">
                                <a href="preview-3.html"><img src="@Url.Action("Details", new { id = item.ID })" alt="@item.ProductName" style="width: 100%; height: 300px; min-height: 300px; min-width: 100%;" /></a>
                                <h2>@item.ProductName</h2>
                                <p><span class="strike">@item.SalePrice đ</span><span class="price">@item.SalePrice đ</span></p>
                                <div class="button"><span><img src="images/cart.jpg" alt="" /><a href="preview-3.html" class="cart-button">Add to Cart</a></span> </div>
                                <div class="button"><span><a href="preview-3.html" class="details">Details</a></span></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-1" style="background-color: #f2f2f2 ">

        </div>

    </div>
</div>
@section scripts{
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#BangSanPham').DataTable();
        });</script>
}
            }
