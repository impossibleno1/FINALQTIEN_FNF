@model IEnumerable<DIENMAYQUYETTIEN2.Models.CashBillDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
}

<h2 style="padding-top: 20px; text-align: center; width: 80%;" class="title">Index</h2>

<table class="table" style="width: 80%;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CashBill.BillCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CashBill.BillCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductCode)
        </td>
        <td>
            <a title="Sửa" href="@Url.Action("Edit", new { id = item.ID})">
                <i class="fas fa-edit"></i>
            </a> &nbsp;|&nbsp;
            <a title="Chi tiết " href="@Url.Action("Detail", new { id = item.ID})">
                <i class="fas fa-info"></i>
            </a> &nbsp;|&nbsp;
            <a title="Xóa" href="@Url.Action("Delete", new { id = item.ID})">
                <i class="fas fa-trash-alt"></i>
            </a>
        </td>
    </tr>
}

</table>
