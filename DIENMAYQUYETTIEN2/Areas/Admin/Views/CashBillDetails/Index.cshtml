@model IEnumerable<DIENMAYQUYETTIEN2.Models.CashBillDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
}

<h2 style="padding-top: 20px; text-align: center; width: 80%;" class="title">Index</h2>

<table class="table" style="width: 80%;">
    <tr>
        <th>
            Quantity
        </th>
        <th>
            Product Name
        </th>
        <th>
            Sale Price
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalePrice)
        </td>
        <td>
            @(item.Quantity * item.SalePrice)
        </td>
        <td>
            <a title="Sửa" href="@Url.Action("Edit", new { id = item.ID})">
                <i class="fas fa-edit"></i>
            </a> &nbsp;|&nbsp;
            <a title="Chi tiết " href="@Url.Action("Detail", new { id = item.ID})">
                <i class="fas fa-info"></i>
            </a> &nbsp;|&nbsp;
            <a title="Xóa" href="@Url.Action("Delete", new { id = item.ID})">
                <i class="fas fa-trash-alt"></i>
            </a>
        </td>
    </tr>
}

</table>

<div>
    <div class="form-group">
        <label class="control-label col-md-2">Grand Total</label>
        <div class="col-md-10">
            <input id="GrandTotal2"  class="disabled" value="@Model.Sum(m => m.SalePrice * m.Quantity)" disabled /> VNĐ
        </div>
    </div>
</div>